<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#E0E0E0"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:backgroundTint="@android:color/white"
    android:divider="?android:attr/dividerVertical"
    android:showDividers="middle"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical">

    <!-- TextView to display workout information -->
    <TextView
        android:id="@+id/workoutInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Workout Info"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <!-- Delete button (X icon) to remove the workout -->
    <ImageView
        android:id="@+id/deleteWorkoutIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_delete"
        android:tint="@android:color/holo_red_dark"
        android:padding="8dp"
        android:contentDescription="Delete workout" />
</LinearLayout>
