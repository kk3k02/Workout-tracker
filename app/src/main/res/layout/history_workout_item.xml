<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:elevation="3dp"
    android:layout_margin="8dp"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:backgroundTint="@android:color/holo_blue_light">

    <!-- TextView to display workout information -->
    <TextView
        android:id="@+id/workoutInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Workout Info"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingEnd="8dp"
        android:background="?android:attr/selectableItemBackground" />

    <!-- Delete button (X icon) to remove the workout -->
    <ImageView
        android:id="@+id/deleteWorkoutIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_delete"
        android:contentDescription="Delete workout"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackground"
        app:tint="@android:color/holo_red_dark" />
</LinearLayout>
