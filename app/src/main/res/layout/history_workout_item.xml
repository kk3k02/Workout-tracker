<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/rounded_bg"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:backgroundTint="#262626"
    android:divider="?android:attr/dividerVertical"
    android:showDividers="middle"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/workoutInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Workout Info"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:padding="8dp"/>

    <ImageView
        android:id="@+id/noteIcon"
        android:layout_width="62dp"
        android:layout_height="58dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="View notes"
        android:padding="8dp"
        android:src="@drawable/ic_info_outline_white"
        app:tint="#FFFFFF" />

    <ImageView
        android:id="@+id/deleteWorkoutIcon"
        android:layout_width="55dp"
        android:layout_height="64dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Delete workout"
        android:padding="8dp"
        android:src="@drawable/ic_delete_white"
        app:tint="#FF6E40" />
</LinearLayout>
