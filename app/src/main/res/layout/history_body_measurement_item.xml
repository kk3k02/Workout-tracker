<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:background="@drawable/rounded_bg"
    android:elevation="4dp"
    android:clipToPadding="false"
    android:divider="?android:attr/dividerVertical"
    android:showDividers="middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/measurementDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Measurement Date"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/deleteButton"
            android:layout_width="55dp"
            android:layout_height="64dp"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="delete measurement"
            android:src="@drawable/ic_delete_white"
            app:tint="#FF0000"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/expandableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/textViewBiceps"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="Biceps:"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_corners"/>

        <TextView
            android:id="@+id/textViewTriceps"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="Triceps:"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_corners"/>

        <TextView
            android:id="@+id/textViewChest"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="Klatka piersiowa:"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_corners"/>

        <TextView
            android:id="@+id/textViewWaist"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="Nadgarstki:"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_corners"/>

        <TextView
            android:id="@+id/textViewHips"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="Biodra:"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_corners"/>

        <TextView
            android:id="@+id/textViewThighs"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="Uda:"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_corners"/>

        <TextView
            android:id="@+id/textViewCalves"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="Łydki:"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_corners"/>

        <TextView
            android:id="@+id/textViewWeight"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="Waga:"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_corners"/>

        <TextView
            android:id="@+id/textViewNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notatka:"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/card_background"/>
    </LinearLayout>
</LinearLayout>
